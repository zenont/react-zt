{
	"name": "react-zt",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/zenontrujillo/react-zt.git",
	"license": "MIT",
	"engines": {
		"npm": ">=3",
		"node": ">=6"
	},
	"scripts": {
		"cleanup": "rimraf lib dist",
		"transpile": "tsc",
		"build": "run-s cleanup transpile",
		"prepublishOnly": "run-s build",
		"test": "./node_modules/.bin/jest --config jest/config.json",
		"test:coverage": "./node_modules/.bin/jest --config jest/config.json --coverage",
		"test:opener": "./node_modules/.bin/opener coverage/lcov-report/index.html",
		"test:report": "run-s test:coverage test:opener",
		"lint": "tslint -p tsconfig.json --exclude '**/*.d.ts'",
		"doc": "./node_modules/.bin/typedoc --out ./doc/ ./src/index.ts",
		"webpack": "webpack --config test/webpack.config.ts --env.HOST_PORT=9546 --env.PRODUCTION=true",
		"bundle": "run-s cleanup webpack",
		"serve": "webpack-dev-server --config test/webpack.config.ts --env.HOST_PORT=9546",
		"start": "run-s cleanup \"serve -- --env.COBRAND={1}\" --"
	},
	"dependencies": {
		"classnames": "^2.2.5",
		"react": "^16.2.0",
		"react-dom": "^16.2.0"
	},
	"devDependencies": {
		"@types/classnames": "^2.2.3",
		"@types/enzyme": "^3.1.6",
		"@types/jest": "^22.0.1",
		"@types/react": "^16.0.34",
		"@types/react-dom": "^16.0.3",
		"@types/react-hot-loader": "^3.0.5",
		"@types/webpack": "^3.8.2",
		"@types/webpack-env": "^1.13.3",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"enzyme-to-json": "^3.3.0",
		"jest": "^22.0.4",
		"npm-run-all": "^4.1.2",
		"react-hot-loader": "^3.1.3",
		"rimraf": "^2.6.2",
		"ts-jest": "^22.0.0",
		"ts-node": "^4.1.0",
		"tslint": "^5.8.0",
		"tslint-react": "^3.3.3",
		"typescript": "^2.6.2",
		"webpack": "^3.10.0",
		"webpack-dev-server": "^2.9.7"
	}
}
